<div class="row top">
  <h2 class="text-center">All users</h2>
</div>

<%= render 'users/info', user: current_user %>

<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
    <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user,:profile_image, :fill, 50, 50, format: 'png', fallback: "no_image.jpg", size:'50x50' %>
              </td>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= user.nickname %>
                <% end %>
              </td>
              <td>
                 <%= user.followings.count %> Follows
              </td>
              <td>
                 <%= user.followers.count %> Followers
              </td>
              <td>
              <!-- フォロー -->
              <% if current_user != user %>
                <% if user.followed_by?(current_user) %>
                  <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn smoothScroll anime_2" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn smoothScroll anime" %>
                <% end %>
              <% end %>
              <!-- フォロー -->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-xs-1"></div>
</div>
