<div class="row top">
  <h2 class="text-center">User Edit</h2>

  <div class="col-xs-1"></div>

  <div class="col-xs-10">

    <!-- 編集フォーマット -->
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

    <%= form_for(@user) do |f| %>

      <div class="text-center">
        <h4>名前</h4>
        <%= f.text_field :nickname, class: "input-color" %>
      </div>

      <br>

      <div class="text-center">
        <h4>Profile image</h4>
        <%= attachment_image_tag @user,:profile_image, :fill, 50, 50, format: 'png', fallback: "no_image.jpg", size:'50x50' %>
      </div>

      <br>

      <div class="text-center">
        <%= f.attachment_field :profile_image, class: "margin-center" %>
      </div>

      <br>

       <div class="text-center">
        <h4>自己紹介</h4>
        <%= f.text_area :introduction, class: "col-xs-12 input-color text-center text_field", size: "10x2", :placeholder => "コメントは 『　120文字　』　まで " %>
      </div>

      <br>

      <div class="text-center">
        <br><%= f.submit 'Update!' , class: "anime" %></br>
      </div>
    <% end %>
  </div>

  <div class="col-xs-1"></div>
</div>
