 <h3 class="text-center">Other Comment</h3>
<% othermovie_comments.each do |othermovie_comment| %>
  <div class="well col-xs-12">
    <div class="col-xs-6 text-center">
      <%= attachment_image_tag othermovie_comment.user ,:profile_image, :fill, 50, 50, format: 'png', fallback: "no_image.jpg", size:'50x50' %>
      <br>
      <%= othermovie_comment.user.nickname %>
    </div>
    <div class="col-xs-6 text-center">
      <%= othermovie_comment.created_at.strftime('%Y/%m/%d') %>
      <br>
      <span class="comment_status_main"><%= othermovie_comment.rate %></span> / 5
      <br>
      <% if othermovie_comment.spoiler_status != "no" %>
        <span class="comment_status_main" style="color: red;"><%= othermovie_comment.spoiler_status %></span>
      <% else %>
        <span class="comment_status_main" style="color: blue;"><%= othermovie_comment.spoiler_status %></span>
      <% end %>
      <span class="comment_status_sub">：ネタバレ</span>
    </div>
    <div class="col-xs-12 text-center">
      コメント内容
      <br>
      <a class="btn btn-default input-color" data-toggle="collapse" href="#collapseExample<%= othermovie_comment.id %>">
        表示／非表示
      </a>
      <div class="collapse" id="collapseExample<%= othermovie_comment.id %>">
        <div class="table-data">
          <%= othermovie_comment.comment %>
        </div>
      </div>
    </div>
  </div>
<% end %>