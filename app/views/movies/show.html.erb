<div class="row top bottom">
  <h2 class="text-center">Movie information</h2>

  <div class="col-xs-1"></div>

  <div class="col-xs-5 text-center responsive">
    <br>
    <%= image_tag("https://image.tmdb.org/t/p/w342/#{@poster_info['poster_path']}", :alt => 'poster') %>
  </div>

  <div class="col-xs-5 responsive">

    <h1 class="text-font"><%= @movie_info['title'] %></h1>

    <h3 class="text-font" ><strong>原題：</strong><%= @movie_info['original_title'] %></h3>

    <p><strong>上映日：</strong><%= @movie_info['release_date'] %></p>

    <p><strong>上映時間：</strong><%= @movie_info['runtime'] %>分</p>

    <p>
      <strong>ジャンル：</strong>
      <% @movie_info['genres'].each do |genre| %>
        <% if genre == @movie_info['genres'].last %>
          <span><%= genre['name'] %></span>
        <% else %>
          <span><%= genre['name'] %>、</span>
        <% end %>
      <% end %>
    </p>

    <p class="text-font"><strong>ストーリー：</strong><%= @movie_info['overview'] %></p>

    <br>

    <div class="average_score">
      <%= render 'movies/average_score', average: @average %>
    </div>
  </div>

  <div class="col-xs-1"></div>
</div>

<div class="row bottom">
  <div class="col-xs-1"></div>

  <div class="col-xs-10">
    <div class="col-xs-1"></div>
    <div class="col-xs-2 text-center">
      <div class="checks_form">
        <%= render 'movies/check_form', checkjudgment: @checkjudgment, apimovie_id: @apimovie_id , moviechecks: @moviechecks %>
      </div>
    </div>
    <div class="col-xs-2"></div>
    <div class="col-xs-2 text-center">
      <div class="marks_form">
        <%= render 'movies/mark_form', markjudgment: @markjudgment, apimovie_id: @apimovie_id , moviemarks: @moviemarks %>
      </div>
    </div>
    <div class="col-xs-2"></div>
    <div class="col-xs-2 text-center">
      <div class="likes_form">
        <%= render 'movies/like_form', likejudgment: @likejudgment, apimovie_id: @apimovie_id , movielikes: @movielikes %>
      </div>
    </div>
    <div class="col-xs-1"></div>
  </div>

  <div class="col-xs-1"></div>
</div>

<div class="row bottom">
  <div class="col-xs-2"></div>

  <div class="col-xs-8">
    <table class="table">
      <tbody>
        <% @cast_info.first(3).each do |cast| %>
          <div>
            <tr>
              <td><%= image_tag("https://image.tmdb.org/t/p/w92/#{cast["profile_path"]}") %></td>
              <td>
                Cast Name :<h3 class="text-font"><%= cast['name'] %></h3>
                Character Name :<%= cast['character'] %>
              </td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-xs-2"></div>
</div>

<br>

<div class="row">
  <div class="col-xs-2"></div>

  <div class="col-xs-8">
    <!-- , local: true -->
    <%= form_with model: @movie_newcomment do |f| %>

      <div id="rateYo" class="margin-center"></div>
      <%= f.hidden_field :rate, id: "score" %>
      <br>
      <%= f.hidden_field :movie_id, :value => @movie_info['id'] %>

      <%= f.text_area :comment, class: "col-xs-12 input-color text-center text_field sample", size: "10x2", :placeholder => "コメントは 『　1人1つ500文字　』　まで " %>
      <div class="col-xs-7 radio_button">
        ネタバレは?：　<%= f.radio_button :spoiler_status, :no , checked: true %>　no　<%= f.radio_button :spoiler_status, :yes %>　yes
      </div>
      <div class="col-xs-1"></div>
      <div class="col-xs-2">
        <div class="cnt_area radio_button"><span class="now_cnt">0</span> / 500</div>
      </div>
      <%= button_tag :type => "submit", :class =>"btn smoothScroll anime_4 col-xs-2 sample_btn" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Comment
      <% end %>
    <% end %>
  </div>

  <div class="col-xs-2"></div>
</div>

<div class="row top">
  <h2 class="text-center">Comment</h2>
  <div class="col-xs-1"></div>

  <div class="col-xs-10 commnet_table">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th class="col-xs-2">User</th>
          <th>Score</th>
          <th>DateTime</th>
          <th><span class="glyphicon glyphicon-remove" aria-hidden="true" style="color: red;"></span></th>
          <th class="col-xs-6">Comment</th>
          <th class="col-xs-2">Edit/Delete</th>
        </tr>
      </thead>
      <tbody class="comments_index">
        <%= render 'movies/comment', mymovie_comment: @mymovie_comment, othermovie_comments: @othermovie_comments %>
      </tbody>
    </table>
  </div>

  <div class="col-xs-1"></div>
</div>