<div class="row top">
  <h2 class="text-center bottom"> My Comment Edit</h2>

  <div class="col-xs-1"></div>

  <div class="col-xs-10">

    <!-- 編集フォーマット -->
    <% if @movie_comment.errors.any? %>
      <h2><%= @movie_comment.errors.count %> errors prohibited this book from being saved:</h2>

      <ul>
      <% @movie_comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

    <%= form_for(@movie_comment) do |f| %>

      <div class="bottom">
        <div id="rateYo" class="margin-center" data-rateyo-half-star="true" data-rateyo-spacing="15px"data-rateyo-multi-color="true"></div>
        <%= f.hidden_field :rate, id: "score" %>
      </div>

      <div class="col-xs-12 text-center">
        <div class="cnt_area"><span class="now_cnt">0</span> / 500</div>
      </div>
      <%= f.text_area :comment, class: "col-xs-12 input-color text-center text_field sample", size: "10x10", :placeholder => "1人1つ500文字" %>
      <div class="col-xs-12 bottom">
        <div class="mid">
          ネタバレスイッチ:
          <div>
            <label class="rocker rocker-small" style="background-color: #fff;">
              <%= f.check_box :spoiler_status ,{}, "yes", "no" %>
              <span class="switch-left">Yes</span>
              <span class="switch-right">No</span>
            </label>
          </div>
        </div>
      </div>
      <div class="col-xs-12 text-center">
        <%= button_tag :type => "submit", :class =>"btn smoothScroll anime_4" do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Comment Create <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-xs-1"></div>
</div>