<div class="row top">
  <h2 class="text-center bottom"> My Comment Edit</h2>

  <div class="col-xs-1"></div>

  <div class="col-xs-10">

    <!-- 編集フォーマット -->
    <% if @movie_comment.errors.any? %>
      <h2><%= @movie_comment.errors.count %> errors prohibited this book from being saved:</h2>

      <ul>
      <% @movie_comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

    <%= form_for(@movie_comment) do |f| %>

      <div class="text-center">
        <div id="rateYo" class="margin-center"></div>
        <br>
        <%= f.hidden_field :rate, id: "score" %>
        <%= f.text_area :comment, class: "col-xs-12 input-color text-center text_field sample", size: "10x5", :placeholder => "コメントは 『　1人1つ500文字　』　まで " %>
      </div>
      <div class="col-xs-12 radio_button">
        ネタバレは？：　<%= f.radio_button :spoiler_status, :no , checked: true %>　no　<%= f.radio_button :spoiler_status, :yes %>　yes
      </div>
      <div class="col-xs-2"></div>
      <div class="col-xs-5">
        <div class="cnt_area radio_button"><span class="now_cnt">0</span> / 500</div>
      </div>
      <div class="text-center">
        <%= button_tag :type => "submit", :class =>"btn smoothScroll anime_4 sample_btn" do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-xs-1"></div>
</div>